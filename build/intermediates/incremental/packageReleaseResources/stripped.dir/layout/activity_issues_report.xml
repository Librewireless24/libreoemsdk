<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/screen_bg"
  tools:context="com.cumulations.libreV2.activity.IssuesReportActivity">
  <LinearLayout
    android:visibility="visible"
    android:id="@+id/lay_Header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toLeftOf="parent"
    app:layout_constraintLeft_toRightOf="parent"
    app:layout_constraintStart_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/appbar_bg"
    android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatImageButton
      android:id="@+id/btn_back"
      android:layout_width="wrap_content"
      android:padding="15dp"
      android:background="@color/transparent"
      android:src="@drawable/ic_arrow_back_white"
      android:layout_height="match_parent">
    </androidx.appcompat.widget.AppCompatImageButton>
    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txt_heading"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="15dp"
      android:gravity="center_horizontal"
      android:text="@string/report_issues"
      android:textColor="@color/white"
      android:textSize="18sp">
    </androidx.appcompat.widget.AppCompatTextView>
  </LinearLayout>
  <RelativeLayout
    android:id="@+id/lay_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_16"
    android:layout_marginTop="60dp">

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txt_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="@dimen/dimen_16"
      android:layout_marginTop="30dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="@dimen/dimen_10"
      android:textColor="@color/white"
      android:text="@string/please_share_details">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.cardview.widget.CardView
      android:id="@+id/lay_card"
      android:layout_below="@+id/txt_header"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      app:cardBackgroundColor="@color/issue_report_card_color"
      android:layout_marginVertical="@dimen/dimen_16"
      app:cardCornerRadius="10dp">
      <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_issueReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16"
        android:textColor="@color/white"
        android:textColorHint="@color/light_gray"
        android:singleLine="false"
        android:maxLength="250"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:textSize="@dimen/dimen_16"
        android:scrollbarStyle="insideInset"
        android:background="@android:color/transparent"
        android:hint="@string/enter_the_description" />
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txt_charCount"
      android:layout_below="@+id/lay_card"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="@dimen/dimen_16"
      android:layout_marginBottom="@dimen/dimen_10"
      android:textColor="@color/white"
      android:gravity="end"
      android:text="@string/characters_remaining">
    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txt_timeFrameHeader"
      android:layout_below="@+id/txt_charCount"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="@dimen/dimen_16"
      android:layout_marginBottom="@dimen/dimen_10"
      android:textColor="@color/white"
      android:text="@string/select_the_approximate_time">
    </androidx.appcompat.widget.AppCompatTextView>

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/lay_timeframe"
      android:layout_below="@+id/txt_timeFrameHeader"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/dimen_16"
      app:endIconDrawable="@drawable/ic_check"
      android:background="@color/transparent"
      app:passwordToggleEnabled="true"
      android:clickable="false"
      android:focusable="false"
      app:passwordToggleTint="@color/white"
      app:theme="@style/TextInputLayoutTheme"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
      <AutoCompleteTextView
        android:id="@+id/txt_timeframe"
        android:background="@drawable/ic_edit_device_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_16"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/less_than_5_minutes"
        android:inputType="none">
      </AutoCompleteTextView>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_submit_issue"
      android:layout_width="wrap_content"
      android:layout_height="45dp"
      android:paddingHorizontal="20dp"
      android:layout_marginVertical="10dp"
      android:textAllCaps="false"
      android:layout_centerHorizontal="true"
      android:gravity="center_vertical"
      android:layout_below="@+id/lay_timeframe"
      android:layout_marginBottom="20dp"
      android:text="@string/submit"
      android:background="@drawable/ic_rectangle_color"
      android:textColor="@color/white" />
  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/lay_Loader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_loader"
    android:visibility="gone">
    <androidx.appcompat.widget.AppCompatTextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="30dp"
      android:text="@string/pleaseWait"
      android:textSize="24sp"
      android:layout_marginTop="280dp"
      android:gravity="center_horizontal"
      android:textColor="@color/white"
      android:background="@color/transparent" />

    <ProgressBar
      android:id="@+id/progress_bar"
      android:layout_width="100dp"
      android:layout_marginTop="10dp"
      android:layout_height="100dp"
      android:layout_centerInParent="true"
      android:indeterminateTint="@color/brand_orange"
      android:background="@color/transparent">
    </ProgressBar>
  </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>