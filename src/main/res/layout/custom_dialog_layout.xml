<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/txt_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="@string/edit_speaker_name"
    android:textColor="@color/white"
    android:textSize="24dp"
    android:textStyle="bold"
    android:gravity="center_horizontal"/>

  <androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/edt_speaker_Name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="TextView"
    android:layout_marginTop="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_header"
    tools:text="Asia/Kolkatta"
    android:textColor="@color/white"
    android:textSize="18dp"/>
  <LinearLayout
    android:visibility="visible"
    android:id="@+id/lay_Header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toLeftOf="parent"
    app:layout_constraintLeft_toRightOf="parent"
    app:layout_constraintStart_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/edt_speaker_Name"
    android:background="@color/appbar_bg"
    android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_skip"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginBottom="20dp"
      android:text="@string/skip"
      android:textAllCaps="false"
      android:layout_weight="5"
      android:layout_marginEnd="20dp"
      android:background="@drawable/ic_rectangle"
      android:textColor="@color/btn_app_orange" />
    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_accept"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginBottom="20dp"
      android:textAllCaps="false"
      android:layout_weight="5"
      android:text="@string/accept"
      android:layout_marginStart="20dp"
      android:background="@drawable/ic_rectangle_color"
      android:textColor="@color/white" />
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>