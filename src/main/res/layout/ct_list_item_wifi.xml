<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/ll_ssid"
    android:foreground="?attr/selectableItemBackground">
    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/img_wifiRangeIcon"
      android:layout_width="30dp"
      android:visibility="invisible"
      tools:src="@drawable/full_range"
      android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ssid_name"
        android:padding="16dp"
        android:layout_toRightOf="@+id/img_wifiRangeIcon"
        app:fontFamily="sans-serif-light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        tools:text="Cumulations3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ssid_security"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/app_text_color_disabled"
        tools:text="WEP/PSK" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/button_enabled" />

</RelativeLayout>